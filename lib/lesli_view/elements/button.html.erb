

<% if mode == :button_to %>

    <%= button_to(
        @url,
        method: @method,
        params: @params,
        class: html_classes,
        data: { turbo_frame: "_top" },
        **alpine_attributes) do %>
        <%= button_content %>
    <% end %>

<% elsif mode == :link %>

    <%= link_to(
        @url,
        class: html_classes,
        data: { turbo_frame: "_top" },
        **alpine_attributes) do %>
        <%= button_content %>
    <% end %>

<% else %>

    <%= content_tag(
        :button,
        type: "button",
        class: html_classes,
        **alpine_attributes) do %>
        <%= button_content %>
    <% end %>

<% end %>
